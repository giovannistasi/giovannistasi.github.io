generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  name      String?
  password  String

  @@map("app_user")
}

model GuestBook {
  id        Int     @id @default(autoincrement())
  name      String
  website   String?
  mastodon  String?
  message   String
  createdAt DateTime? @default(now())

  @@map("guest_book")
}
